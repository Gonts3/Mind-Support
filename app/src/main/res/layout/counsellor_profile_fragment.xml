<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary5">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- space btw buttons and profile pic -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/username_icon"
                        android:contentDescription="User profile pic" />

                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="counsellor placeholder"
                        android:textSize="24sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/counsellorCredentials"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Info"
                        android:textSize="20dp"
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:gravity="fill"
                        android:drawableLeft="@drawable/username_icon"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:onClick="editCounsellorInfo"/>

                    <Button
                        android:id="@+id/counsellorAssignments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active Assignments"
                        android:textSize="20dp"
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:gravity="fill"
                        android:drawableLeft="@drawable/username_icon"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:onClick="editAssignments"/>

                    <Button
                        android:id="@+id/counsellorLogOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Log out"
                        android:textSize="20dp"
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:gravity="fill"
                        android:drawableLeft="@drawable/ic_logout"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:onClick="counsellorLogOut"/>

                    <Button
                        android:id="@+id/counsellorDeleteAcc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete Account"
                        android:textSize="20dp"
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:gravity="fill"
                        android:drawableLeft="@drawable/ic_deleteacc"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:onClick="counsellorDeleteAcc"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>