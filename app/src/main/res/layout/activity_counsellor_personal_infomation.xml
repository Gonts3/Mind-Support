<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".counsellor.CounsellorPersonalInformation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Personal Information"
            android:textSize="35dp"
            android:textStyle="bold"
            android:gravity="left"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/counsNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Names"
            android:drawableLeft="@drawable/ic_names"
            android:textSize="24dp"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:gravity="fill"
            android:onClick="changeCounsNames"/>
        <!-- card to edit names -->
        <androidx.cardview.widget.CardView
            android:id="@+id/changeCounsNamesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-20dp"
            app:cardCornerRadius="28dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:orientation="vertical"
                android:padding="28dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/newCounsellorFName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Please enter your new first name"
                        android:drawableStart="@drawable/username_icon"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/newClientLName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Please enter your new last name"
                        android:drawableStart="@drawable/username_icon"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done!"
                    android:onClick="backToCounsProfile"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>